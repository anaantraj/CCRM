package edu.ccrm.domain;

import java.time.LocalDate;
import java.util.UUID;

/**
 * An abstract base class representing a person in the institution.
 * Demonstrates abstraction and provides common properties for Students and Instructors.
 */
// Topic: OOP (Abstraction) - Abstract Class
public abstract class Person {

    // Topic: Access Levels (protected)
    protected final UUID id;
    protected String fullName;
    protected String email;
    protected final LocalDate creationDate;

    public Person(String fullName, String email) {
        this.id = UUID.randomUUID();
        this.fullName = fullName;
        this.email = email;
        this.creationDate = LocalDate.now();
    }

    // Getters
    public UUID getId() {
        return id;
    }

    public String getFullName() {
        return fullName;
    }

    public String getEmail() {
        return email;
    }

    public LocalDate getCreationDate() {
        return creationDate;
    }

    // Setters
    public void setFullName(String fullName) {
        this.fullName = fullName;
    }

    public void setEmail(String email) {
        this.email = email;
    }

    // Topic: OOP (Abstraction) - Abstract Method
    public abstract String getProfileDetails();

    @Override
    public String toString() {
        return "ID=" + id + ", Name='" + fullName + "', Email='" + email + "'";
    }
}
